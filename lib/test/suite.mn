/*!
 * @class TestSuite
 */
class TestSuite {
	- def new(self) {
		return self
	}

	@def instance() {
		if TestSuite.g_instance is null {
			TestSuite.g_instance = TestSuite()
		}
		return TestSuite.g_instance
	}

	def register(self, case) {
		self.cases += case
	}

	def run(self) {
		print {'[==========] Running %d tests from %d test case\n' % (0, self.cases.size())}
		for case in self.cases {
			print {'[----------] %d test from %s\n' % (0, typeof case)}
			case.run()
		}
	}

	- cases = []
	- @g_instance = null
}

def enableTest(test) {
	test()
}
