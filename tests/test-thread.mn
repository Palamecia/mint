load test.case
load system.thread
load system.mutex

class ThreadTest : Test.Case {

	def test_sharedReference(self) {

		proc = def (i, m) {
			m.lock()
			for i := 0, i := i + 1, i < 100 {
				m.unlock()
				System.sleep(1)
				m.lock()
			}
			m.unlock()
		}
		
		i = 0
		m = System.Mutex()
		t = System.Thread(proc)
		t.start(i, m)
		m.lock()
		while i < 100 {
			m.unlock()
			v = i
			m.lock()
		}
		m.unlock()
		
		self.expectEqual(100, i)
	}
}

Test.enable_test_case(ThreadTest)
